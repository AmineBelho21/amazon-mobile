{
  "expo": {
    "name": "amazon-mobile",
    "slug": "amazon-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "amazonmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.amazonmobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSAllowsArbitraryLoads": true,
        "UIBackgroundModes": [
          "voip"
        ],
        "NSCameraUsageDescription": "This app uses the camera to let user put a photo in his profile page.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to let user make a call."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.amazonmobile"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-build-properties",
      "expo-secure-store",
      "expo-font",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "amazon",
          "organization": "fast-5f"
        }
      ], 
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "123",
          "enableGooglePay": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "75e97f52-991e-4fb6-9cc8-c8f591b0054b"
      }
    }
  }
}
